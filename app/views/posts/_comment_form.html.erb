<%= form_for ([@post, @comment]) do |f| %>

  <%= render 'shared/error_messages', object: f.object %>
  
  <div>
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </div>
  <div>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <div>
    <%= f.submit %>
  </div>

<% end %>