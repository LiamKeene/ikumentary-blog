<% provide(:title, 'All Posts') %>

<% @posts.each do |post| %>
  <article class="post">

    <%= render partial: 'post_header', locals: { post: post } %>

    <p>
      <%= truncate_html(post.content, length: 500, omission: ' ... ') %>
    </p>
    
    <%= link_to 'Read More â†’', post_path(post), class: 'post-links post-more-link' %>

    <%= link_to "#{post.comments.count} Comments", post_path(post, anchor: 'comments-list'), class: 'post-links post-comments-link' %>
    
  </article>
<% end %>
<%= paginate @posts %>