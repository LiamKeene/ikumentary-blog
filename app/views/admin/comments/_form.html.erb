<%= form_for [:admin, @comment] do |f| %>

  <%= render 'shared/error_messages', object: f.object %>
  
  <div>
    <%= f.label :post %><br>
    <%= f.collection_select :post_id, Post.all, :id, :title %>
  </div>
  <div>
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </div>
  <div>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  
  <% if defined?(edit) && edit %>
  <div>
    <%= f.label :ip_addr %><br>
    <%= f.text_field :ip_addr %>
  </div>  
  <div>
    <%= f.label :agent %><br>
    <%= f.text_field :agent %>
  </div>
  <% end %>
  <div>
    <%= f.submit %>
  </div>

<% end %>