<% provide(:title, 'All Tags') %>

<p><%= link_to 'New Tag', [:new, :admin, :tag] %></p>

<h1>All Tags</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Display Name</th>
      <th>Created</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%= tag.display_name %></td>
        <td><%= tag.created_at %></td>
        <td><%= link_to 'Show', [:admin, tag] %></td>
        <td><%= link_to 'Edit', [:edit, :admin, tag] %></td>
        <td><%= link_to 'Destroy', [:admin, tag], method: :delete, data: { confirm: 'Are you sure?' } %></td>         
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to 'New Tag', [:new, :admin, :tag] %></p>