<% provide(:title, 'All Posts') %>

<p><%= link_to 'New Post', [:new, :admin, :post] %></p>

<h1>All Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Slug</th>
      <th>Content</th>
      <th>Author</th>
      <th>Created</th>
      <th>Published</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.slug %></td>
        <td><%= post.content %></td>
        <td><%= post.author.name %></td>
        <td><%= post.created_at %></td>
        <td><%= post.published_at %></td>
        <td><%= link_to 'Show', [:admin, post] %></td>
        <td><%= link_to 'Edit', [:edit, :admin, post] %></td>
        <td><%= link_to 'Destroy', [:admin, post], method: :delete, data: { confirm: 'Are you sure?' } %></td>         
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to 'New Post', [:new, :admin, :post] %></p>
