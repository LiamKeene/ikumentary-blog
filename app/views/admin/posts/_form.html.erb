<%= form_for [:admin, @post] do |f| %>
  
  <%= render 'shared/error_messages', object: f.object %>
  
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :slug %><br>
    <%= f.text_field :slug %>
  </div>
  <div>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <div>
    <%= f.label :author %><br>
    <%= f.collection_select :author_id, User.all, :id, :name %>
  </div>
  <div>
    <%= f.label :status %><br>
    <%= f.text_field :status %>
  </div>
  <div>
    <%= f.submit %>
  </div>

<% end %>