<%= form_for [:admin, @post] do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :slug %><br>
    <%= f.text_field :slug %>
  </div>
  <div>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <div>
    <%= f.label :author %><br>
    <%= f.collection_select :author_id, User.all, :id, :name %>
  </div>
  <div>
    <%= f.label :status %><br>
    <%= f.text_field :status %>
  </div>
  <div>
    <%= f.submit %>
  </div>

<% end %>