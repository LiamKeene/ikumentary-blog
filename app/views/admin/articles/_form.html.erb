<%= form_for [:admin, @article] do |f| %>
  
  <%= render 'shared/error_messages', object: f.object %>
  
  <div>
    <%= f.label :type %><br>
    <%= f.select :type, Article.select_options %>
  </div>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :slug %><br>
    <%= f.text_field :slug %>
  </div>
  <div>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <div>
    <%= f.label :author %><br>
    <%= f.collection_select :author_id, User.all, :id, :name %>
  </div>
  <div>
    <%= f.label :published_at %><br>
    <%= f.datetime_select :published_at %>
  </div>
  <div>
    <%= f.submit %>
  </div>

<% end %>
