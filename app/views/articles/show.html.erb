<% provide(:title, @article.title) %>

<article class="article">

  <%= render partial: 'articles/article_header', locals: { article: @article } %>

  <p>
    <%= @article.content.html_safe %>
  <p>

  <%= render partial: 'articles/article_footer', locals: { article: @article } %>

  <%= render partial: 'articles/article_navigation', locals: { 
    next_art: @article.next, prev_art: @article.previous
  } %>

  <section id="comments-list">
  <h3>Comments</h3>
  <% if @article.comments.any? %>
    <%= render @article.comments %>
  <% else %>
    <p>There are no comments yet.</p>
  <% end %>
  </section>

<% if @article.allow_comments? %>
  <section id="comment-form">
    <%= render 'articles/comment_form' %>
  </section>
<% else %>
  <p>Comments are closed for this <%= @article.type.downcase %></p>
<% end %>

</article>