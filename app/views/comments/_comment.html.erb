  <article class="comment">
    <header>
      <%= comment.author %> said 
      <time datetime="<%= comment.created_at %>">
        <%= time_ago_in_words(comment.created_at) %> ago.
      </time>
    </header>
    <div class="comment-content" id="comment-<%= comment.id %>">
      <%= comment.content %>
    </div>
  </article>